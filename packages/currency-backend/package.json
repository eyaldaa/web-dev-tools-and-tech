  },
  "devDependencies": {
    "@applitools/docker-compose-testkit": "^1.0.0",
    "@applitools/rendering-grid-deployment": "*",
    "chai": "^4.1.2",
    "docker-compose-mocha": "^1.1.0",
    "eslint": "^4.2.0",
    "eslint-plugin-mocha-no-only": "0.0.5",
    "eslint-plugin-prettier": "^2.1.2",
